<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />

        <edu.brandeis.bostonaccessibleroutes.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/menu"
            android:textSize="@dimen/guillotine_item_text_size" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/instruction_group"
        android:layout_width="match_parent"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">



        <edu.brandeis.bostonaccessibleroutes.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:id="@+id/how_to_use"
            android:text="How To Use" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/signout_group"
        style="@style/LinearLayout.GuillotineItem">

        <edu.brandeis.bostonaccessibleroutes.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:id="@+id/sign_out"
            android:text="Sign Out" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_divider_height" />
</LinearLayout>