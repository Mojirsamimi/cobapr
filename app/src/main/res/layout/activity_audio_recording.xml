<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imageView"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:background="@color/guillotine_background"
        android:id="@+id/done"
        android:layout_marginTop="125dp"
        android:layout_below="@+id/stopPlay"
        android:layout_centerHorizontal="true" />

    <ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:background="@drawable/ic_play_arrow_black_48dp"
    android:id="@+id/play"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/stopPlay"
        android:layout_alignStart="@+id/stopPlay" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_fiber_manual_record_black_48dp"
        android:id="@+id/record"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_stop_black_48dp"
        android:id="@+id/stop"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/record"
        android:layout_alignStart="@+id/record" />

    <ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:background="@drawable/ic_stop_black_48dp"
    android:id="@+id/stopPlay"
        android:layout_alignTop="@+id/play"
        android:layout_alignLeft="@+id/record"
        android:layout_alignStart="@+id/record" />


</RelativeLayout>